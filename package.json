{
  "releaseName": "coinpush",
  "name": "coinpush",
  "version": "0.0.1-alpha-4",
  "email": "kewin@frontend-freelance.com",
  "author": "Kewin Brandsma",
  "main": "index.js",
  "private": false,
  "license": "CC-BY-NC-ND-4.0",
  "description": "Javascript Trading Client and Server",
  "repository": {
    "type": "git",
    "url": "https://github.com/DutchKevv/TradeJS.git"
  },
  "keywords": [
    "TradeJS",
    "Stock",
    "Forex",
    "Trade",
    "Trading",
    "Node",
    "Trading",
    "NodeJS"
  ],
  "scripts": {
    "copy-ssl": "cp -r /etc/letsencrypt/ ./server-nginx/ssl && chmod -R 777 ./server-nginx/ssl/",
    "start": "npm run d-up",
    "start-server": "docker-compose up -d nginx redis gateway notify cache event comment user",
    "start-client": "docker-compose up client",
    "start-nginx": "docker-compose up nginx",
    "build-client": "docker-compose build client",
    "build-client-app": "docker-compose build client-app",
    "build-server": "docker-compose build mongodb nginx redis gateway notify user event cache comment",
    "build-all": "docker-compose build",
    "build-prod-client": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build client",
    "build-prod-server": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build nginx redis gateway notify user event cache comment",
    "build-prod-nginx": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build nginx",
    "build-prod-all": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build",
    "prod-client": "npm run inc-build-number && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d client",
    "prod-server": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d nginx redis gateway notify user event cache comment",
    "prod-nginx": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d nginx",
    "stop-server": "docker-compose stop nginx redis gateway notify user event cache comment mongodb",
    "d-rmi-none": "docker rmi $(docker images --filter 'dangling=true' -q --no-trunc)",
    "d-rmi-all": "docker rmi -f $(docker images -q)",
    "d-mongo-shell": "docker exec -it mongodb mongo",
    "d-rm-all": "docker-compose rm -f",
    "d-stop": "docker-compose stop",
    "d-build": "docker-compose build",
    "d-up": "docker-compose up",
    "d-prune": "docker system prune",
    "clean-client": "cd ./scripts && sh ./clean-npm-modules.sh",
    "clean-app": "cd ./scripts && sh ./clean-npm-modules.sh",
    "clean-server": "cd ./scripts && sh ./clean-npm-modules.sh",
    "clean-db": "",
    "_prod": "pm2 start ecosystem.config.js --env production && pm2 monit",
    "inc-build-number": "node ./scripts/inc-build-number.js"
  }
}
